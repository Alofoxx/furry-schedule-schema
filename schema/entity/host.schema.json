{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "entity/host.schema.json",
  "title": "Host",
  "type": "object",
  "required": [
    "id",
    "displayName"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "socials": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "label",
          "url"
        ]
      }
    },
    "imageBannerUrl": {
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": true
}